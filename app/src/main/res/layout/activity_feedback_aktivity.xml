<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FeedbackAktivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="30dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_feedback"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/jdl_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keriteria Feedback"
        android:padding="20dp"
        android:background="@color/colorbacground"
        android:layout_marginBottom="30dp"/>
    <EditText
        android:id="@+id/isi_feedback"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Isi Laporan"
        android:padding="20dp"
        android:inputType="textLongMessage"
        android:background="@color/colorbacground"
        android:layout_marginBottom="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim Feedback"
        android:textColor="#fff"
        android:layout_marginLeft="100dp"
        android:background="@drawable/oval"/>

</androidx.appcompat.widget.LinearLayoutCompat>